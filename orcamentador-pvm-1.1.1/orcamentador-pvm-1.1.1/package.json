{
  "name": "orcamentador-pvm",
  "version": "1.1.1",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder --win nsis"
  },
  "build": {
    "appId": "br.com.vivamar.orcamentador",
    "productName": "Orçamentador — Pousada Viva Mar",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "main.js",
      "assets/**",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "assets/logo.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": false
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.0"
  }
}